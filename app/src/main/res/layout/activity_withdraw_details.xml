<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawDetails">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/playwinprimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/black" />


                <com.rkboss.mtk.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/comfortaa"
                    android:textStyle="bold"
                    android:text="Bank Details"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="@color/playwinbg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"

                >


                <com.rkboss.mtk.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />


                <EditText
                    android:id="@+id/acno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/lato"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="@color/md_white_1000"
                    android:hint="Enter Bank Account Number"
                    android:maxLength="30"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#60000000"
                    android:textSize="13sp"
                    tools:ignore="TouchTargetSizeCheck" />


                <com.rkboss.mtk.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Holder Name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/lato"
                    android:background="@drawable/rectangle_3_shape"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:backgroundTint="@color/md_white_1000"
                    android:hint="Enter Account Holder Name"
                    android:textColor="@color/black"
                    android:textColorHint="#60000000"
                    android:textSize="13sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <com.rkboss.mtk.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IFSC Code"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    />

                <EditText

                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_3_shape"
                    android:backgroundTint="@color/md_white_1000"
                    android:hint="Enter IFSC Code"
                    android:maxLength="30"
                    android:fontFamily="@font/lato"
                   android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#60000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/ax_loginbutton"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Add Payment Method"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

        </ScrollView>



    </RelativeLayout>



</RelativeLayout>