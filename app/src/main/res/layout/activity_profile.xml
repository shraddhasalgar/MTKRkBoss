<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/playwinprimary"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/black" />


                <com.rkboss.mtk.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="My Profile"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="682dp"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            android:background="#0F000000"
            android:gravity="center"
            android:orientation="vertical">


            <!--            <ImageView-->
            <!--                android:layout_width="120dp"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:layout_marginTop="40dp"-->
            <!--                android:layout_marginRight="50dp"-->
            <!--                app:srcCompat="@drawable/splashname_ax" />-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="40dp"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/notificationSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/comfortaa"
                            android:padding="10dp"
                            android:text="Notification Setting"
                            android:textColor="#BD0303"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="TouchTargetSizeCheck" />


                        <com.rkboss.mtk.latobold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/comfortaa"
                            android:text="Manage profile"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rectangle_3_shape"
                            android:backgroundTint="#FFFFFF"
                            android:drawableTint="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:hint="Name"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#60000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_person"
                            tools:ignore="TouchTargetSizeCheck" />


                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangle_3_shape"
                            android:backgroundTint="#FFFFFF"
                            android:drawableTint="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#60000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:drawableEndCompat="@drawable/ic_email"
                            tools:ignore="TouchTargetSizeCheck" />


                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangle_3_shape"
                            android:backgroundTint="#FFFFFF"
                            android:clickable="false"
                            android:drawableTint="@color/black"
                            android:focusable="false"
                            android:fontFamily="@font/comfortaa"
                            android:hint="Mobile number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#60000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_baseline_mobile_friendly_24"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/ax_loginbutton"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:text="Update Profile"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <com.rkboss.mtk.latobold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/comfortaa"
                            android:text="Change Password"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rectangle_3_shape"
                            android:backgroundTint="#FFFFFF"
                            android:drawableTint="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:hint="New Password"
                            android:inputType="number"
                            android:maxLength="12"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#60000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_password"
                            tools:ignore="TouchTargetSizeCheck" />


                        <EditText
                            android:id="@+id/confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangle_3_shape"
                            android:backgroundTint="#FFFFFF"
                            android:drawableTint="@color/black"
                            android:fontFamily="@font/comfortaa"
                            android:hint="Confirm Password"
                            android:inputType="number"
                            android:maxLength="12"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#60000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_password"
                            tools:ignore="TouchTargetSizeCheck" />


                        <Button

                            android:id="@+id/submit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/ax_loginbutton"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:text="Update Password"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>