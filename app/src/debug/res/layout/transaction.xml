<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        app:cardCornerRadius="5dp"
        android:background="@drawable/rectangle_2_shape"
        android:backgroundTint="@color/white"

        >

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="0dp"
           android:layout_height="wrap_content">

           <com.rkboss.mtk.latonormal
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/date"
               android:text="02/11/2019"
               android:fontFamily="@font/comfortaa"
               android:textStyle="bold"
               android:textSize="12sp"
               android:textColor="@color/black"
               android:layout_margin="10dp"
               android:layout_alignParentRight="true"
               />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#3EFFFFFF"
               />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:id="@+id/amount_block"
                   android:layout_height="wrap_content">

                   <com.rkboss.mtk.latonormal
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Amount"
                       android:fontFamily="@font/comfortaa"
                       android:textStyle="bold"
                       android:textSize="12sp"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"
                       />

                   <com.rkboss.mtk.latobold
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="200"
                       android:fontFamily="@font/comfortaa"
                       android:textStyle="bold"
                       android:textSize="12sp"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/amount"
                       />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="15dp"
                   android:gravity="right"
                   android:layout_toRightOf="@id/amount_block"
                   android:layout_alignParentRight="true"
                   android:layout_height="wrap_content">

                   <com.rkboss.mtk.latonormal
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Narration"
                       android:fontFamily="@font/comfortaa"
                       android:textStyle="bold"
                       android:textSize="12sp"
                       android:textColor="@color/black"
                       android:gravity="right"
                       android:layout_marginLeft="10dp"
                       />

                   <com.rkboss.mtk.latobold
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/remark"
                       android:fontFamily="@font/comfortaa"
                       android:textStyle="bold"
                       android:textSize="12sp"
                       android:text="Winning"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"
                       />

                   <com.rkboss.mtk.latobold
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/remark1"
                       android:text="Winning"
                       android:visibility="gone"
                       android:fontFamily="@font/comfortaa"
                       android:textStyle="bold"
                       android:textSize="12sp"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"
                       />



               </LinearLayout>


           </RelativeLayout>




       </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:visibility="gone"
        >

        <com.rkboss.mtk.latonormal
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="02/11/2019"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/accent"
            android:textColor="@color/background"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <com.rkboss.mtk.latonormal
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="200"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/accent"
            android:textColor="@color/background"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />


        <com.rkboss.mtk.latonormal
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Game played"
            android:padding="10dp"
            android:background="@color/accent"
            android:textColor="@color/background"
            />

    </LinearLayout>



</LinearLayout>