<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OddEven">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:padding="10dp"
                android:background="@color/playwinprimary"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="35dp"
                            android:padding="10dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/back"
                            android:id="@+id/back"
                            app:tint="@color/black" />



                        <com.rkboss.mtk.latobold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:textSize="16dp"
                            android:fontFamily="@font/lato"
                            android:id="@+id/title"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="Place bet"
                            />


                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/wallet_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        android:layout_marginRight="10dp">

                        <com.rkboss.mtk.latobold
                            android:id="@+id/balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/coin"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="visible"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/wallet_icon" />

                    </LinearLayout>


                </RelativeLayout>



            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/playwinbg"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="40dp"

                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                   >

                    <com.rkboss.mtk.latobold
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="#000000"
                        android:padding="15dp"
                        android:id="@+id/date"
                        android:text="DEC, 12 2021"
                        android:textColor="@color/white"
                         android:textSize="18sp"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/type_container"
                        android:layout_weight="6"
                        android:visibility="gone"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:background="@color/black"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.rkboss.mtk.latobold
                            android:id="@+id/open_game"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#A70808"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="OPEN"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="@color/white" />

                        <com.rkboss.mtk.latobold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:id="@+id/close_game"
                            android:background="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/lato"
                            android:textSize="16sp"
                            android:textColor="@color/font"
                            android:padding="10dp"
                            android:text="CLOSE"

                            />

                    </LinearLayout>


                </LinearLayout>


                <Spinner
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edittext"
                    android:padding="5dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="3dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@color/black"
                            android:padding="5dp">

                            <com.rkboss.mtk.latobold
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:background="@color/white"
                                android:padding="10dp"
                                android:fontFamily="@font/lato"
                                android:text="ODD"
                                android:textSize="16sp"
                                android:id="@+id/odd"
                                />

                            <com.rkboss.mtk.latobold
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/even"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato"
                                android:background="@color/white"
                                android:gravity="center"
                                android:textColor="@color/font"
                                android:padding="10dp"
                                android:text="EVEN"

                                />

                        </LinearLayout>


                    </LinearLayout>





                    <com.rkboss.mtk.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Bid Digits"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:textSize="18sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:padding="5dp"
                                android:visibility="visible"
                                android:id="@+id/even_row"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"

                                        android:text="0"
                                        android:textColor="@color/font"
                                        android:textSize="16sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="2"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="4"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="6"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="8"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>


                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:padding="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/odd_row"
                                android:visibility="gone"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="1"
                                        android:textColor="@color/font"
                                        android:textSize="16sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="3"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="5"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"

                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="7"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    >

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:civ_border_width="1dp"
                                        app:civ_border_color="@color/font"
                                        android:src="@color/md_white_1000"
                                        />

                                    <com.rkboss.mtk.latobold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="9"
                                        android:textColor="@color/font"
                                        android:textSize="16sp"
                                        />

                                </RelativeLayout>


                            </LinearLayout>


                        </RelativeLayout>

                    </HorizontalScrollView>

                    <com.rkboss.mtk.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Bid Points"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/md_black_1000"
                        android:textColorHint="@color/md_black_1000"
                        android:background="@drawable/edittext2"
                        android:hint="Enter Amount"
                        android:inputType="number"
                        android:textSize="16sp" />



                </LinearLayout>



                <com.rkboss.mtk.latobold
                    android:id="@+id/submit"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40sp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ax_loginbutton"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Submit"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"/>


            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>